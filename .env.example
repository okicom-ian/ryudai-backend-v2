# =========================
# General
# =========================
TZ=Asia/Tokyo
UPLOAD_LIMIT=128M

# =========================
# Mosquitto (MQTT Broker)
# =========================
MQTT_USER=ryudai
MQTT_PASS=changeme   # <<< change this to your password

# =========================
# InfluxDB
# =========================
DOCKER_INFLUXDB_INIT_MODE=setup
DOCKER_INFLUXDB_INIT_USERNAME=admin
DOCKER_INFLUXDB_INIT_PASSWORD=changeme      # <<< change this
DOCKER_INFLUXDB_INIT_ORG=ryudai
DOCKER_INFLUXDB_INIT_BUCKET=amr
DOCKER_INFLUXDB_INIT_RETENTION=0s
DOCKER_INFLUXDB_INIT_ADMIN_TOKEN=changeme  # <<< change this

# =========================
# Grafana
# =========================
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=changeme    # <<< change this
INFLUX_ORG=ryudai
INFLUX_BUCKET=amr
INFLUX_TOKEN=changeme            # must match the InfluxDB admin token above

# =========================
# MySQL
# =========================
MYSQL_ROOT_PASSWORD=changeme  # <<< change this
MYSQL_DATABASE=ryudai
MYSQL_USER=ryudai
MYSQL_PASSWORD=changeme      # <<< change this
